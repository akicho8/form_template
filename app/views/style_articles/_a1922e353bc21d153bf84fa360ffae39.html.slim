#app
  .box_wrap
    .app_container(:style="style")
      .item(v-for="i in boxCount" :class="`size${(i - 1) % 3}`")
        | {{i}}

  .form-horizontal
    .form-group
      label.col-md-2.control-label 個数
      .col-md-10
        input(type="range" v-model.number="boxCount" min="1" max="100" step="1")
    template(v-for="elem in all")
      .form-group
        label.col-md-2.control-label
          template(v-if="real_value")
            | {{_.kebabCase(elem.key)}}
          template(v-else)
            | {{elem.desc}}
        .col-md-10
          template(v-for="e in elem.list")
            label.radio-inline
              input(type="radio" v-model="$data[elem.key]" :value="e.value" :disabled="elem.disabled($data)")
                template(v-if="real_value")
                  | {{e.value}}
                template(v-else)
                  | {{e.desc}}
    .form-group
      .col-md-offset-2.col-md-10
        label.checkbox-inline
          input(type="checkbox" v-model="real_value") 実際値

  pre
    | display: flex<br>
    | flex-direction: {{flexDirection}}<br>
    | flex-wrap: {{flexWrap}}<br>
    | justify-content: {{justifyContent}}<br>
    | align-items: {{alignItems}}<br>
    template(v-if="flexWrap !== 'nowrap'")
      | align-content: {{alignContent}}<br>

  ul
    li 子要素にサイズが指定されていると伸びない


javascript:
  new Vue({
    el: "#app",
    data: {
      boxCount: 5,
      real_value: false,

      flexDirection: "row",
      flexWrap: "nowrap",
      justifyContent: "flex-start",
      alignItems: "stretch",
      alignContent: "stretch",

      all: [
        {
          desc: "並び",
          key: "flexDirection",
          disabled: e => false,
          list: [
            { value: "row",            desc: "→", },
            { value: "row-reverse",    desc: "←", },
            { value: "column",         desc: "↓", },
            { value: "column-reverse", desc: "↑", },
          ],
        },
        {
          desc: "折り返",
          key: "flexWrap",
          disabled: e => false,
          list: [
            { value: "nowrap",       desc: "さない", },
            { value: "wrap",         desc: "す↓", },
            { value: "wrap-reverse", desc: "す↑", },
          ],
        },
        {
          desc: "X",
          key: "justifyContent",
          disabled: e => false,
          list: [
            { value: "flex-start",    desc: "左", },
            { value: "center",        desc: "中", },
            { value: "space-between", desc: "端", },
            { value: "space-around",  desc: "散", },
            { value: "flex-end",      desc: "右", },
          ],
        },
        {
          desc: "Y",
          key: "alignItems",
          disabled: e => false,
          list: [
            { value: "stretch",    desc: "伸",  },
            { value: "flex-start", desc: "上",  },
            { value: "baseline",   desc: "上隙", },
            { value: "center",     desc: "中",  },
            { value: "flex-end",   desc: "下",  },
          ],
        },
        {
          desc: "行",
          key: "alignContent",
          disabled: e => e.flexWrap === 'nowrap',
          list: [
            { value: "stretch",       desc: "伸",  },
            { value: "center",        desc: "中",  },
            { value: "flex-start",    desc: "上",  },
            { value: "flex-end",      desc: "下",  },
            { value: "space-around",  desc: "散",  },
            { value: "space-between", desc: "端",  },
          ],
        },
      ],
    },
    created() {
    },
    methods: {
    },
    computed: {
      style() {
        return {
          flexDirection: this.flexDirection,
          flexWrap: this.flexWrap,
          justifyContent: this.justifyContent,
          alignItems: this.alignItems,
          alignContent: this.alignContent,
        }
      },
    },
  })

